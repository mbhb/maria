#include <stdio.h>
#include <stdlib.h>
#include <signal.h>

// Variables para contar señales
int sigint_count = 0;
int sigtstp_count = 0;

// Manejador de señales
void signal_handler(int signo) {
    if (signo == SIGINT) {
        sigint_count++;
        printf("Señal SIGINT recibida (%d veces).\n", sigint_count);
    } else if (signo == SIGTSTP) {
        sigtstp_count++;
        printf("Señal SIGTSTP recibida (%d veces).\n", sigtstp_count);
    }
}

int main() {
    // Instalar el manejador de señales para SIGINT y SIGTSTP
    signal(SIGINT, signal_handler);
    signal(SIGTSTP, signal_handler);

    int total_signals_received = 0;

    while (total_signals_received < 10) {
        // El programa principal espera señales
        pause();
        total_signals_received = sigint_count + sigtstp_count;
    }

    printf("Número total de señales SIGINT recibidas: %d\n", sigint_count);
    printf("Número total de señales SIGTSTP recibidas: %d\n", sigtstp_count);

    return 0;
}
